<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"    
    tools:context=".MainActivity" >
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/add"
    android:layout_alignParentTop="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"        
        android:text="A simple implementation of Multithreading.&#0010;Click add new timer to create a new timer thread."
        android:textColor="#607d8b"
        android:gravity="center_horizontal"
        android:textSize="18dp" />
    <ImageView android:layout_width="match_parent"
        android:layout_height="2dp" 
        android:background="#ff5722"/>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/timers"
            ></LinearLayout>
    </ScrollView>    
    </LinearLayout>
<Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="#009688"
    android:id="@+id/add"
    android:textColor="#ffffff"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:text="Add new timer"/>
</RelativeLayout><!-- From: file:/D:/Lab7Multithreading/app/src/main/res/layout/activity_main.xml -->